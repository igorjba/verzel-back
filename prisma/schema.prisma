generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id      String   @id @db.Uuid @default(uuid())
  name    String
  brand   String
  model   String
  value   Float
  photo   String?

  @@map("vehicles")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       String    @id @db.Uuid @default(uuid())
  name     String
  email    String    @unique
  password String
  role     Role      @default(USER)

  @@map("users")
}
